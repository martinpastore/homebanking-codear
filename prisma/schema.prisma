// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Loan {
  id          String    @id @default(uuid())
  amount      Int
  state       String
  customer_id String
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  version     Int       @default(0)
}

model Customer {
  id             String    @id @default(uuid())
  account_number String
  account_status String
  first_name     String
  last_name      String
  risk           Int
  created_at     DateTime  @default(now())
  updated_at     DateTime?
  version        Int       @default(0)
}

model Movements {
  id          String    @id @default(uuid())
  amount      Int
  customer_id String
  reference   String
  state       String
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  version     Int       @default(0)
}
